<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimationDrawDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#FF0000</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textColorPrimary">#FF0000</item>
        <item name="backgroundColor">#FF0000</item>
        <item name="background">@drawable/bg_linear_layout</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding</item>
    </style>

</resources>